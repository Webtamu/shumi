<Window x:Class="Jam_App_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jam_App_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="txtTitle" Text="Jam time" FontSize="69" 
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock Name="txtStatus" FontSize="69" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <Button Name="btnToggle" Content="Start Session" FontSize="14"
                Width="200" Height="50" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Click="btnToggle_Click"/>
    </Grid>
</Window>
